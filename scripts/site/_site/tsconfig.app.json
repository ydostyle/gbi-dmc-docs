{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "esNext",
    "types": [],
    "paths": {
      "ngx-color/sketch": [ "../node_modules/ngx-color/sketch" ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
